{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src/",
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["@shared/*"],
      "@domain/*": ["domain/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/"
  ]
}
